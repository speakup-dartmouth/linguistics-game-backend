{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types/modules"
    ],
    "baseUrl": "./src/",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}